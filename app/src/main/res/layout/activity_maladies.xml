<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    tools:context=".Activity.Maladies">

    <RelativeLayout
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTexte">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape_list">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Maladies"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_home_black_24dp" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titre"
        android:layout_margin="10dp"
        android:background="@drawable/shape">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/name_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tilte">

                    <TextView
                        android:id="@+id/name_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom et Synonymes"
                        android:textAlignment="center"
                        android:textColor="@color/colorTexte"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/name_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorTexte" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/description_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_block"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tilte">

                    <TextView
                        android:id="@+id/description_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textAlignment="center"
                        android:textColor="@color/colorTexte"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/description_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorTexte" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/symptome_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/condition_block"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/symptome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tilte">

                    <TextView
                        android:id="@+id/symptome_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Symptoms Posible"
                        android:textAlignment="center"
                        android:textColor="@color/colorTexte"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/symptome_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/symptome"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorTexte" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/condition_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_block"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tilte">

                    <TextView
                        android:id="@+id/condition_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condition Medical"
                        android:textAlignment="center"
                        android:textColor="@color/colorTexte"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/condition_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/condition"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorTexte" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/traitement_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptome_block"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/traitement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tilte">

                    <TextView
                        android:id="@+id/traitement_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description du traitement"
                        android:textAlignment="center"
                        android:textColor="@color/colorTexte"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/traitement_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/traitement"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorTexte" />
            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>