<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D464D">

        <TextView
            android:id="@+id/Id"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="#986584"
            android:gravity="center"
            android:src="@drawable/diagnosis"
            android:text="1"
            android:textColor="@color/colorTexte"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/Id"
            android:layout_toRightOf="@+id/Id"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Android Name lknwelknfdkewnknkewnkdnereorire"
            android:textColor="@color/colorTexte"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/check"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp" />
    </RelativeLayout>


</RelativeLayout>
