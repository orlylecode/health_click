<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTexte">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape_list">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="parametres"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_home_black_24dp" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titre"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/shape">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Vos parametres sont ; "
                    android:textColor="@color/colorTexte"
                    android:textSize="15dp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/default_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/message"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textColor="@color/colorTexte"
                    android:textSize="12dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <TextView
                android:id="@+id/section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notice"
                android:layout_margin="10dp"
                android:text="Parametres par defauft"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic|bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/section"
                android:layout_marginRight="8dp"
                android:background="@color/colorTexte" />

            <RelativeLayout
                android:id="@+id/form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/divider"
                android:background="#D8DFDD">

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="#fff"
                    android:gravity="start"
                    android:hint="votre age"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textAlignment="viewStart" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/age"
                    android:layout_marginRight="8dp"
                    android:background="#85878D" />

                <Spinner
                    android:id="@+id/sexe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age"
                    android:layout_margin="10dp"
                    android:background="#fff"
                    android:entries="@array/sexe"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textAlignment="viewStart" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/sexe"
                    android:layout_marginRight="8dp"
                    android:background="#85878D" />

                <Spinner
                    android:id="@+id/langeu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sexe"
                    android:layout_gravity="start"
                    android:layout_margin="10dp"
                    android:background="#fff"
                    android:entries="@array/langue"
                    android:padding="10dp"
                    android:textAlignment="viewStart" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/langeu"
                    android:layout_marginRight="8dp"
                    android:background="#85878D" />
            </RelativeLayout>

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/form"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:text="save" />
        </RelativeLayout>


    </ScrollView>


</RelativeLayout>