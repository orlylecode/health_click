<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D464D">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:background="#4A6542"
            android:padding="2dp">

            <TextView
                android:id="@+id/prix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2900"
                android:textColor="@color/colorTexte"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/prixh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prix"
                android:layout_centerHorizontal="true"
                android:text="FCFA"
                android:textColor="@color/colorTexte"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/laboratoireh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prixh"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="laboratoire"
                android:textColor="@color/colorTexte"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/laboratoire"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/laboratoireh"
                android:gravity="center"
                android:maxLines="1"
                android:text="Orly le code "
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="italic" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nasenbluten"
                android:textColor="@color/colorTexte"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/conditionnementh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:text="Conditionnement"
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/conditionnement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/conditionnementh"
                android:text="Epistaxis"
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/principe_actifh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/conditionnement"
                android:text="Principe Actif "
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/principe_actif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/principe_actifh"

                android:text=" Enterotoxigenic Escherichia coli infection"
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/forme_dosageh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/principe_actif"
                android:text="Forme et dosage"
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forme_dosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forme_dosageh"

                android:text="Enterotoxigenic Escherichia coli infection"
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/classeh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forme_dosage"
                android:text="classe Medicamenteuse "
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/classe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classeh"
                android:text="Orly le code "
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/posologieh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classe"
                android:text="Posologie recommandée "
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/posologie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/posologieh"
                android:text="1 à 2 applications par jour "
                android:textColor="@color/colorTexte"
                android:textSize="15dp"
                android:textStyle="italic" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
